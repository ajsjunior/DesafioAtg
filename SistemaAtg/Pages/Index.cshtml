@page
@model IndexModel
@{
    ViewData["Title"] = "Desafio ATG";
}

<h2>Mensagens</h2>
<hr />

<h4>Nova Mensagem</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div class="form-group">
                <label class="radio-inline">
                    @Html.RadioButtonFor(model => model.EnviarMensagem.Side, NucleoAtg.Dados.Lado.Buy, new { name = "Side" }) Compra
                </label>
                <label class="radio-inline">
                    @Html.RadioButtonFor(model => model.EnviarMensagem.Side, NucleoAtg.Dados.Lado.Sell, new { name = "Side" }) Venda
                </label>
                <span asp-validation-for="EnviarMensagem.Side" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EnviarMensagem.Price" class="control-label"></label>
                @Html.EditorFor(model => model.EnviarMensagem.Price)
                <span asp-validation-for="EnviarMensagem.Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EnviarMensagem.Quantity" class="control-label"></label>
                <input asp-for="EnviarMensagem.Quantity" class="form-control" />
                <span asp-validation-for="EnviarMensagem.Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EnviarMensagem.Symbol" class="control-label"></label>
                <input asp-for="EnviarMensagem.Symbol" class="form-control" />
                <span asp-validation-for="EnviarMensagem.Symbol" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Enviar" class="btn btn-default" />
                <div style="font-weight: bold">@Model.RespostaEnvio</div>
            </div>
        </form>
    </div>
</div>

<div id="MsgRetorno" style="display:none;"></div>

<hr />
<h4>Histórico de Mensagens</h4>

<div class="row">
    <div class="col-md-4">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.EnviarMensagem.Side)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EnviarMensagem.Price)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EnviarMensagem.Quantity)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EnviarMensagem.Symbol)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var mensagem in Model.Historico)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => mensagem.Side)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => mensagem.Price)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => mensagem.Quantity)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => mensagem.Symbol)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
